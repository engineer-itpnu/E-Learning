{% extends 'EduEleraningBundle:Teacher:main.html.twig' %}


{% block main %}
        <table class="table table-bordered table-hover" style="text-align: center;direction: rtl">
            <thead>
                <tr>
                    <th>کد دانشجو</th>
                    <th>نام </th>
                    <th>نام خانوادگی</th>
                    <th>تلفن </th>
                    <th>کدملی</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>{{ student.id }}</td>
                        <td>{{ student.fname }}</td>
                        <td>{{ student.lname }}</td>
                        <td>{{ student.phone }}</td>
                        <td>{{ student.melicode }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
{% endblock %}